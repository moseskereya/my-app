 @model Moses_Recipe.Models.Pie
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" class="img-thumbnail" alt="pies_images" />
        <div class="caption">
            <h4 class="text-right">@Model.Price.ToString("c")</h4>
            <h4>
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
            </h4>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId"
                   >
                      Add to Cart
                </a>
            </p>
        </div>
    </div>

</div>
